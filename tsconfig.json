{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 23",
  "_version": "23.0.0",
  "compilerOptions": {
    "lib": ["es2024", "dom"],
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",                         // ← necessário para usar "paths"
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./types/*"]
    }
  }
}
